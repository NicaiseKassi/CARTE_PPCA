  <tool name="tool_9" displayname="Multi-Band Variation">
    <parameters>
      <param name="BANDS" displayname="Bands" type="Required" direction="Input">
        <dialogReference>&lt;p&gt;Bands&lt;/p&gt;&lt;p&gt;Grid list, input&lt;/p&gt;</dialogReference>
      </param>
      <param name="MEAN" displayname="Mean Distance" type="Required" direction="Output">
        <dialogReference>&lt;p&gt;Mean Distance&lt;/p&gt;&lt;p&gt;Grid, output&lt;/p&gt;</dialogReference>
      </param>
      <param name="STDDEV" displayname="Standard Deviation" type="Required" direction="Output">
        <dialogReference>&lt;p&gt;Standard Deviation&lt;/p&gt;&lt;p&gt;Grid, output&lt;/p&gt;</dialogReference>
      </param>
      <param name="DIFF" displayname="Distance" type="Required" direction="Output">
        <dialogReference>&lt;p&gt;Distance&lt;/p&gt;&lt;p&gt;Grid, output&lt;/p&gt;</dialogReference>
