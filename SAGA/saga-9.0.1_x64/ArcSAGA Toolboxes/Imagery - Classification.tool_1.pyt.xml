  <tool name="tool_1" displayname="K-Means Clustering for Grids">
    <parameters>
      <param name="GRIDS" displayname="Grids" type="Required" direction="Input">
        <dialogReference>&lt;p&gt;Grids&lt;/p&gt;&lt;p&gt;Grid list, input&lt;/p&gt;</dialogReference>
      </param>
      <param name="CLUSTER" displayname="Clusters" type="Required" direction="Output">
        <dialogReference>&lt;p&gt;Clusters&lt;/p&gt;&lt;p&gt;Grid, output&lt;/p&gt;</dialogReference>
      </param>
      <param name="STATISTICS" displayname="Statistics" type="Required" direction="Output">
        <dialogReference>&lt;p&gt;Statistics&lt;/p&gt;&lt;p&gt;Table, output&lt;/p&gt;</dialogReference>
      </param>
      <param name="METHOD" displayname="Method" type="Optional" direction="Output">
        <dialogReference>&lt;p&gt;Method&lt;/p&gt;&lt;p&gt;Choice&lt;/p&gt;&lt;p&gt;Available Choices:&lt;/p&gt;&lt;p&gt;[0] Iterative Minimum Distance (Forgy 1965)&lt;/p&gt;&lt;p&gt;[1] Hill-Climbing (Rubin 1967)&lt;/p&gt;&lt;p&gt;[2] Combined Minimum Distance / Hillclimbing&lt;/p&gt;&lt;p&gt;Default: 1&lt;/p&gt;</dialogReference>
