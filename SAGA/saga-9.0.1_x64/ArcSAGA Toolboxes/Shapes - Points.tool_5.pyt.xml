  <tool name="tool_5" displayname="Convert Line/Polygon Vertices to Points">
    <parameters>
      <param name="LINES" displayname="Lines" type="Required" direction="Input">
        <dialogReference>&lt;p&gt;Lines&lt;/p&gt;&lt;p&gt;Shapes, input&lt;/p&gt;</dialogReference>
      </param>
      <param name="POINTS" displayname="Points" type="Required" direction="Output">
